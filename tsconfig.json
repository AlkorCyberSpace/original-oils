{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "global.d.ts"
, "components/Navbar.jsx", "app/page.jsx", "app/layout.jsx", "app/about/page.jsx", "components/Hero.jsx", "components/ConnectSection.jsx", "components/CraftSection.jsx", "components/HandpickedSection.jsx", "components/OilsSection.jsx", "components/Testimonials.jsx", "components/AboutUs.jsx", "next.config.js"  ],
  "exclude": ["node_modules"]
}
